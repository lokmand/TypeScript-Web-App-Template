{
    "extends": "tslint:recommended",
    "rulesDirectory": [
        "node_modules/tslint/lib/rules"
    ],
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "new-parens": true,
        "no-magic-numbers": true,
        "newline-before-return": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": false,
        "variable-name": [true, "allow-snake-case"]
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}
